{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",

    "compilerOptions": {
        "declaration": true,
        "outDir": "./build",
        "lib": ["es2015"],
        "module": "commonjs",
        "target": "es2015",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "exclude": [ "node_modules" ],
    "include": [ "src/**/*.ts" ],
}
